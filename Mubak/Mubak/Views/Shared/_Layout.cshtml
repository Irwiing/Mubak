<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Styles/global.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="fixed-top navbar navbar-expand-lg navbar-dark bg-dark ">
        <a class="navbar-brand" href="#">
            <img src="~/Images/Logo-h.svg" width="250" height="50" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Product", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Criar Produtos", "Create", "Product", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Criar Categoria", "Create", "Category", null, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        
        <footer class="fixed-bottom text-white bg-dark d-flex justify-content-center align-items-center">
            <p>&copy; @DateTime.Now.Year - Mubak by: Irwing, Saulo e Hugo</p>
        </footer>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
