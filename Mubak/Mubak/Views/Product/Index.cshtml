@model IEnumerable<Model.Product>
@Styles.Render("~/Styles/product.css")
@Scripts.Render("~/Scripts/WhatsappSale.js")
@{
    ViewBag.Title = "Index";
}

<h2 class="">Mubak Informática</h2>


    <div class="container border d-flex flex-wrap justify-content-center" id="product-list">
        @foreach (var item in Model)
        {
            <div class="card m-4 text-white bg-dark mb-3 rounded-sm">
                <div class="card-header">
                    <h5 class="card-title border-bottom">@Html.DisplayFor(modelItem => item.Description)</h5>
                    <h6 class="card-subtitle">@Html.DisplayFor(modelItem => item.Brand)</h6>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Model)</p>
                    <img class="border rounded-lg btn-" src="~/Images/Logo-v.svg" />
                    <p class="card-text">$@Html.DisplayFor(modelItem => item.UnitaryPrice)</p>

                    @Html.ActionLink("Adicionar ao carrinho", "Detail", new { id = item.Id }, new { @class = "btn btn-success flex-fill" })

                </div>
            </div>
        }
    </div>

